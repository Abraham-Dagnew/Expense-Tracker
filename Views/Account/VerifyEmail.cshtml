@using Expense_Tracker.Models.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<link rel="stylesheet" href="~/css/styles.css" />

<div class="container">
    <div class="form-title">Verify Email</div>
    <form asp-action="VerifyEmail" method="post">
        <div asp-validation-summary="ModelOnly" class="error-message"></div>
        <div class="input-group">
            <input asp-for="Email" placeholder=" " />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="error-message"></span>
        </div>
        <button type="submit" class="btn">Verify</button>
        <div class="links">
            <a asp-controller="Account" asp-action="Login" class="link">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
